<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="4dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/single_story_image"
                android:layout_width="match_parent"
                android:layout_height="200dp" />



            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:src="@drawable/unliked_button"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:src="@drawable/delete" />


        </RelativeLayout>


        <TextView
            android:id="@+id/story_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/story_description"
                android:layout_width="0dp"
                android:layout_weight="4.3"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:padding="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="dkajskldja  sakdlajskldj aklsdjas kljd klajsd lkasj asljdasoud oaisjd oaisjdoisa sdk lasjdlkj sakldjlaksj dklasjdlkjas kdlajsldk jaslkdj aksljd lkasjdjasl kdjksaljd lkasj dlkasjdkla s"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="italic"

                />

            <Button
                android:id="@+id/more_button"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="....."
                android:layout_gravity="center|bottom"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="italic"

                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>